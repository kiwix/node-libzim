{
  "name": "@openzim/libzim",
  "version": "2.4.3",
  "description": "Libzim bindings for NodeJS",
  "scripts": {
    "clean": "rm -rf dist build/native/build",
    "tsc": "tsc",
    "prepare": "npm run tsc",
    "codecov": "nyc --reporter=lcov npm t",
    "install": "npm run download && node-gyp rebuild -v && npm run bundle",
    "download": "node ./download-libzim.js",
    "bundle": "node ./bundle-libzim.js",
    "test": "jest",
    "test-mem-leak": "node -r ts-node/register test/makeLargeZim.ts"
  },
  "nyc": {
    "extension": [
      ".ts"
    ],
    "exclude": [
      "test/*",
      "node_modules"
    ]
  },
  "main": "dist/index.js",
  "author": "Joseph Reeve",
  "license": "GPL-3.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/openzim/node-libzim.git"
  },
  "bugs": {
    "url": "https://github.com/openzim/node-libzim/issues"
  },
  "homepage": "https://github.com/openzim/node-libzim#readme",
  "gypfile": true,
  "dependencies": {
    "@types/bindings": "^1.3.0",
    "@types/faker": "^4.1.12",
    "@types/jest": "^25.2.3",
    "@types/mime": "^2.0.3",
    "@types/node": "^13.13.32",
    "@types/rimraf": "^3.0.0",
    "axios": "^0.21.1",
    "bindings": "^1.5.0",
    "dotenv": "^8.2.0",
    "exec-then": "^1.3.1",
    "faker": "^4.1.0",
    "jest": "^25.5.4",
    "mime": "^2.4.6",
    "minimist": "^1.2.5",
    "mkdirp": "^1.0.4",
    "node-addon-api": "^2.0.2",
    "node-gyp": "^6.1.0",
    "rimraf": "^3.0.2",
    "tar": "^6.0.5",
    "ts-jest": "^25.4.0",
    "ts-node": "^8.10.2",
    "tsconfig-paths": "^3.9.0"
  },
  "devDependencies": {
    "nyc": "^15.1.0",
    "typescript": "^3.9.7"
  },
  "jest": {
    "preset": "ts-jest/presets/js-with-ts"
  }
}
